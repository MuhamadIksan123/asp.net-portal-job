@model IEnumerable<PortalJob.Models.CompanyJob>

@{
    ViewData["Title"] = "Company Jobs";
}

<div class="container mx-auto p-4">
    <h1 class="mb-4 text-2xl font-semibold">Company Jobs</h1>
    <a href="@Url.Action("Create", "CompanyJob")" class="btn btn-primary btn-md">Add New Job</a>

    <table class="table-zebra mt-1 table">
        <thead>
            <tr>
                <th class="border-b px-4 py-2">Thumbnail</th>
                <th class="border-b px-4 py-2">Job Name</th>
                <th class="border-b px-4 py-2">Category</th>
                <th class="border-b px-4 py-2">Salary</th>
                <th class="border-b px-4 py-2">Skill Level</th>
                <th class="border-b px-4 py-2">Candidates</th>
                <th class="border-b px-4 py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(job.Thumbnail))
                        {
                            <img src="@job.Thumbnail" class="h-8 w-8" alt="icon">
                        }
                    </td>
                    <td class="px-4 py-2">@job.Name</td>
                    <td class="px-4 py-2">@job.Category.Name</td>
                    <td class="px-4 py-2">@job.Salary</td>
                    <td class="px-4 py-2">@job.SkillLevel</td>
                    <td class="px-4 py-2">@job.Candidates.Count Candidates</td>
                    <td class="px-4 py-2">
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "CompanyJob", new { id = job.Id })">Edit</a>
                        <a class="btn btn-error btn-sm" href="@Url.Action("Delete", "CompanyJob", new { id = job.Id })" onclick="return confirm('Are you sure?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
