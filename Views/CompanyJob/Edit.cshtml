@model PortalJob.Payload.Request.CompanyJobRequest

@{
    ViewData["Title"] = "Edit Job";
}

<div class="container mx-auto mt-6 max-w-lg">
    <h1 class="mb-4 text-2xl font-semibold text-gray-800">Edit Job</h1>

    <form method="post" enctype="multipart/form-data" action="@Url.Action("Update", "CompanyJob", new { id = ViewData["JobId"] })" class="rounded-lg bg-white p-6 shadow-md">
        <!-- Job Name -->
        <div class="mb-4">
            <label for="Name" class="block text-sm font-medium text-gray-700">Job Name</label>
            <input type="text" id="Name" name="Name" value="@Model.Name" required class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Job Type -->
        <div class="mb-4">
            <label for="Type" class="block text-sm font-medium text-gray-700">Job Type</label>
            <input type="text" id="Type" name="Type" value="@Model.Type" required class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Skill Level -->
        <div class="mb-4">
            <label for="SkillLevel" class="block text-sm font-medium text-gray-700">Skill Level</label>
            <input type="text" id="SkillLevel" name="SkillLevel" value="@Model.SkillLevel" required class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Salary -->
        <div class="mb-4">
            <label for="Salary" class="block text-sm font-medium text-gray-700">Salary</label>
            <input type="text" id="Salary" name="Salary" value="@Model.Salary" required class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Tampilkan Gambar Lama Jika Ada -->
        @if (ViewData["CurrentThumbnail"] != null && !string.IsNullOrEmpty(ViewData["CurrentThumbnail"].ToString()))
        {
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Current Thumbnail</label>
                <img src="@ViewData["CurrentThumbnail"]" alt="Job Thumbnail" class="mt-1 h-20 w-20 rounded border object-cover" />
            </div>
        }

        <!-- Upload Thumbnail Baru -->
        <div class="mb-4">
            <label for="ThumbnailFile" class="block text-sm font-medium text-gray-700">Change Thumbnail</label>
            <input type="file" id="ThumbnailFile" name="ThumbnailFile" accept="image/*" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" />
            <p class="text-sm text-gray-500">Leave empty to keep the current thumbnail.</p>
        </div>

        <!-- Job Responsibilities -->
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Job Responsibilities (3 Required)</label>
            @for (int i = 0; i < 3; i++)
            {
                <input type="text" name="JobResponsibilities[]" value="@(Model.JobResponsibilities.ElementAtOrDefault(i) ?? "")" required class="form-input mb-2 w-full" />
            }
        </div>

        <!-- Job Qualifications -->
        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Job Qualifications (3 Required)</label>
            @for (int i = 0; i < 3; i++)
            {
                <input type="text" name="JobQualifications[]" value="@(Model.JobQualifications.ElementAtOrDefault(i) ?? "")" required class="form-input mb-2 w-full" />
            }
        </div>

        <!-- Submit Button -->
        <div class="mt-6 flex justify-between">
            <a href="@Url.Action("Index", "CompanyJob")" class="text-gray-600 hover:text-gray-800">Back</a>
            <button type="submit" class="rounded bg-green-500 px-4 py-2 text-white hover:bg-green-600">Update Job</button>
        </div>
    </form>
</div>
