@model PortalJob.Payload.Request.RegisterRequest

@{
    ViewData["Title"] = "Register";
}

<div class="container mx-auto mt-6 max-w-lg">
    <h1 class="mb-4 text-2xl font-semibold text-gray-800">Register</h1>

    <form method="post" enctype="multipart/form-data" action="@Url.Action("Register", "Account")" class="rounded-lg bg-white p-6 shadow-md">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-4 rounded bg-red-500 p-3 text-white">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Full Name -->
        <div class="mb-4">
            <label for="FullName" class="block text-sm font-medium text-gray-700">Full Name</label>
            <input type="text" id="FullName" name="FullName" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" value="@Model.FullName" />
        </div>

        <!-- Email -->
        <div class="mb-4">
            <label for="Email" class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" id="Email" name="Email" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" value="@Model.Email" />
        </div>

        <!-- Password -->
        <div class="mb-4">
            <label for="Password" class="block text-sm font-medium text-gray-700">Password</label>
            <input type="password" id="Password" name="Password" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Occupation -->
        <div class="mb-4">
            <label for="Occupation" class="block text-sm font-medium text-gray-700">Occupation</label>
            <input type="text" id="Occupation" name="Occupation" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" value="@Model.Occupation" />
        </div>

        <!-- Experience -->
        <div class="mb-4">
            <label for="Experience" class="block text-sm font-medium text-gray-700">Experience (Years)</label>
            <select id="Experience" name="Experience" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="">Pilih Experience</option>
                <option value="1" selected="@(Model.Experience == 1)">1 Tahun</option>
                <option value="2" selected="@(Model.Experience == 2)">2 Tahun</option>
                <option value="3" selected="@(Model.Experience == 3)">3 Tahun</option>
                <option value="4" selected="@(Model.Experience == 4)">4 Tahun</option>
                <option value="5" selected="@(Model.Experience == 5)">5+ Tahun</option>
            </select>
        </div>

        <!-- Avatar Upload (Wajib) -->
        <div class="mb-4">
            <label for="AvatarFile" class="block text-sm font-medium text-gray-700">Upload Avatar</label>
            <input type="file" id="AvatarFile" name="AvatarFile" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" required />
            @if (ViewData.ModelState["AvatarFile"]?.Errors.Any() == true)
            {
                <span class="text-sm text-red-500">@ViewData.ModelState["AvatarFile"].Errors[0].ErrorMessage</span>
            }
        </div>

        <!-- Role -->
        <div class="mb-4">
            <label for="Role" class="block text-sm font-medium text-gray-700">Role</label>
            <select id="Role" name="Role" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="">Pilih Role</option>
                <option value="SuperAdmin">SuperAdmin</option>
                <option value="Employer">Employer</option>
                <option value="Seeker">Seeker</option>
            </select>
        </div>

        <!-- Submit Button -->
        <div class="mt-6 flex items-center justify-between">
            <a href="@Url.Action("Login", "User")" class="text-gray-600 hover:text-gray-800">Already have an account?</a>
            <button type="submit" class="rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">Register</button>
        </div>
    </form>
</div>
