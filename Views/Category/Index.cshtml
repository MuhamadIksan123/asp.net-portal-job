@model IEnumerable<PortalJob.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mx-auto p-4">
    <h1 class="mb-4 text-2xl font-semibold">Categories</h1>
    <a href="@Url.Action("Create", "Category")" class="btn btn-primary btn-md">Create New Category</a>
    <table class="table-zebra mt-1 table">
        <thead>
            <tr>
                <th class="border-b px-4 py-2">Name</th>
                <th class="border-b px-4 py-2">Icon</th>
                <th class="border-b px-4 py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td >@category.Name</td>
                    <td >
                        @if (!string.IsNullOrEmpty(category.Icon))
                        {
                            <img src="@category.Icon" class="h-8 w-8" alt="icon">
                        }
                    </td>
                    <td >
                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Category", new { id = category.Id })" class="text-blue-500">Edit</a>
                        <a class="btn btn-error btn-sm" href="@Url.Action("Delete", "Category", new { id = category.Id })" class="text-red-500">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
