@model PortalJob.Payload.Request.CategoryRequest

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mx-auto mt-6 max-w-lg">
    <h1 class="mb-4 text-2xl font-semibold text-gray-800">Create New Category</h1>

    <form method="post" enctype="multipart/form-data" action="@Url.Action("Store", "Category")" class="rounded-lg bg-white p-6 shadow-md">
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="mb-4 rounded bg-red-500 p-3 text-white">
                @ViewData["ErrorMessage"]
            </div>
        }

        <!-- Input Category Name -->
        <div class="mb-4">
            <label for="Name" class="block text-sm font-medium text-gray-700">Category Name</label>
            <input type="text" id="Name" name="Name" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" value="@Model.Name" />
            @if (ViewData.ModelState["Name"]?.Errors.Any() == true)
            {
                <span class="text-sm text-red-500">@ViewData.ModelState["Name"].Errors[0].ErrorMessage</span>
            }
        </div>

        <!-- Input Category Icon -->
        <div class="mb-4">
            <label for="IconFile" class="block text-sm font-medium text-gray-700">Category Icon</label>
            <input type="file" id="IconFile" name="IconFile" class="mt-1 block w-full rounded-md border border-gray-300 px-4 py-2 focus:ring-blue-500 focus:border-blue-500" required />
            @if (ViewData.ModelState["IconFile"]?.Errors.Any() == true)
            {
                <span class="text-sm text-red-500">@ViewData.ModelState["IconFile"].Errors[0].ErrorMessage</span>
            }
        </div>

        <!-- Submit Button -->
        <div class="mt-6 flex items-center justify-between">
            <a href="@Url.Action("Index", "Category")" class="text-gray-600 hover:text-gray-800">Back</a>
            <button type="submit" class="rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">Create Category</button>
        </div>
    </form>
</div>
